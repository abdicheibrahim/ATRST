@using ProjetAtrst.ViewModels.ProjectTask
@model ProjectTaskViewModel

<form asp-action="Create" method="post" id="createTaskForm">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    @* Hidden field for project ID *@
    <input asp-for="ProjectId" value="@ViewBag.CurrentProjectId" type="hidden" />

    @* Basic task information section *@
    <div class="row mb-3">
        <div class="col-12 mb-3">
            <label asp-for="TaskName" class="form-label fw-bold">
                <i class="fas fa-tasks"></i> Nom de la tâche *
            </label>
            <input asp-for="TaskName" class="form-control form-control-lg"
                   placeholder="Saisissez le nom de la tâche..." />
            <span asp-validation-for="TaskName" class="text-danger"></span>
        </div>
        <div class="col-12 mb-3">
            <label asp-for="Description" class="form-label fw-bold">
                <i class="fas fa-align-left"></i> Description
            </label>
            <textarea asp-for="Description" class="form-control" rows="3"
                      placeholder="Saisissez une description de la tâche..."></textarea>
            <div class="form-text">Description détaillée de la tâche (optionnel)</div>
        </div>
    </div>

    @* Task settings section *@
    <div class="row mb-3">
        <div class="col-md-4 mb-3">
            <label asp-for="Status" class="form-label fw-bold">
                <i class="fas fa-flag"></i> Statut
            </label>
            <select asp-for="Status" class="form-select">
                <option value="Pending">En attente</option>
                <option value="InProgress">En cours</option>
                <option value="Done">Terminée</option>
            </select>
        </div>
        <div class="col-md-4 mb-3">
            <label asp-for="Priority" class="form-label fw-bold">
                <i class="fas fa-exclamation-triangle"></i> Priorité
            </label>
            <select asp-for="Priority" class="form-select">
                <option value="1">Haute 🔴</option>
                <option value="2" selected>Moyenne 🟡</option>
                <option value="3">Basse 🟢</option>
            </select>
        </div>
        <div class="col-md-4 mb-3">
            <label asp-for="Progress" class="form-label fw-bold">
                <i class="fas fa-percentage"></i> Progression
            </label>
            <div class="input-group">
                <input asp-for="Progress" type="range" min="0" max="100"
                       class="form-range" id="progressRange" />
                <input asp-for="Progress" type="number" min="0" max="100"
                       class="form-control" style="max-width: 80px;" id="progressInput" />
                <span class="input-group-text">%</span>
            </div>
        </div>
    </div>

    @* Date scheduling section *@
    <div class="row mb-3">
        <div class="col-md-6 mb-3">
            <label asp-for="StartDate" class="form-label fw-bold">
                <i class="fas fa-play"></i> Date de début
            </label>
            <input asp-for="StartDate" class="form-control" type="date" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="EndDate" class="form-label fw-bold">
                <i class="fas fa-stop"></i> Date de fin
            </label>
            <input asp-for="EndDate" class="form-control" type="date" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>
    </div>

    @* Action buttons inside Modal Footer *@
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
            <i class="fas fa-times"></i> Annuler
        </button>
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-save"></i> Créer la tâche
        </button>
    </div>
</form>