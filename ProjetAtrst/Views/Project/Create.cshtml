@using ProjetAtrst.ViewModels.Project
@model ProjectCreateViewModel
@{
    Layout = "_LayoutResearcher";
    ViewData["Title"] = "Nouveau projet";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-plus-circle me-2"></i>@ViewData["Title"]</h2>
    <a href="javascript:history.back()" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Retour
    </a>
</div>

<div class="border-1  p-4 shadow-sm">
    <div class="card-body">
        <form asp-action="Create" method="post" class="needs-validation" novalidate>
            <div class="mb-4">
                <label asp-for="Title" class="form-label fw-bold">
                    <i class="bi bi-card-heading me-2"></i>Titre du projet <span class="text-danger">*</span>
                </label>
                <input asp-for="Title" class="form-control form-control-lg" placeholder="Entrez le titre du projet" required />
                <div class="invalid-feedback">
                    Veuillez saisir un titre pour le projet.
                </div>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Description" class="form-label fw-bold">
                    <i class="bi bi-text-paragraph me-2"></i>Description
                </label>
                <textarea asp-for="Description" class="form-control" rows="6" 
                          placeholder="Décrivez brièvement votre projet (objectifs, contexte, etc.)"></textarea>
                <div class="form-text">
                    Cette description aidera les autres à comprendre l'objectif de votre projet.
                </div>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between mt-5">
                <a href="javascript:history.back()" class="btn btn-outline-danger">
                    <i class="bi bi-x-lg me-2"></i>Annuler
                </a>
                <button type="submit" class="btn btn-outline-success px-4">
                    <i class="bi bi-check-lg me-2"></i>Créer le projet
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
