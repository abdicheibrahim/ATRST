@using ProjetAtrst.ViewModels.Project
@model AvailableProjectsWithPaginationViewModel

<h2>المشاريع المتاحة للانضمام</h2>

<div id="projects-list" class="row row-cols-1 row-cols-md-2 g-4">
    @foreach (var project in Model.Projects)
    {
        <div class="col">
            <div class="card mb-3">
                <div class="card-body">
                    <h5>@project.Title</h5>
                    <p>@project.Description</p>
                    <p>Chef de projet: @project.LeaderFullName</p>
                    <a asp-controller="ProjectRequest"
                       asp-action="Send"
                       asp-route-projectId="@project.Id"
                       asp-route-receiverId="@project.LeaderId"
                       asp-route-type="Join"
                       class="btn btn-success">
                        Demander à rejoindre
                    </a>
                </div>
            </div>
        </div>
    }
</div>

<div id="pagination-container" class="mt-3 fixed-bottom bg-white shadow p-2">
    @* This will be replaced dynamically *@
    
</div>

@section Scripts {
    <script src="~/js/available-projects.js"></script>
}
