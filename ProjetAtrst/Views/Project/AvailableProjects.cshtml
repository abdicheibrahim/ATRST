@using ProjetAtrst.ViewModels.Project
@model AvailableProjectsWithPaginationViewModel
<h2>Projets disponibles pour participer</h2>

<div class="table-responsive">
    <table class="table table-bordered table-striped align-middle shadow-sm">
        <thead class="table-success">
            <tr>
                <th style="width: 80px;">Image</th>
                <th>Titre</th>
                <th>Chef de projet</th>
                <th style="width: 160px;">Action</th>
            </tr>
        </thead>
        <tbody id="projects-list">
            @foreach (var project in Model.Projects)
            {
                <tr>
                    <td class="text-center">
                        @if (!string.IsNullOrEmpty(project.ImageUrl))
                        {
                            <img src="@project.ImageUrl" alt="Projet" class="img-thumbnail" style="height: 48px; width: auto;" />
                        }
                        else
                        {
                            <div class="bg-dark text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 48px; height: 48px; font-size: 20px;">
                                @project.Title?.Trim().FirstOrDefault().ToString().ToUpper()
                            </div>
                        }
                    </td>
                    <td>@project.Title</td>
                    <td>@project.LeaderFullName</td>
                    <td>
                        <a asp-controller="ProjectRequest"
                           asp-action="Send"
                           asp-route-projectId="@project.Id"
                           asp-route-receiverId="@project.LeaderId"
                           asp-route-type="Join"
                           class="btn btn-success btn-sm">
                            Demander Ã  rejoindre
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div id="pagination-container" class="mt-3 fixed-bottom bg-white shadow p-2">
</div>

@section Scripts {
     <script src="~/js/available-projects.js"></script> 
    
}
