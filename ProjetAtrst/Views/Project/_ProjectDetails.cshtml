@using ProjetAtrst.ViewModels.Project
@model ProjectDetailsV2ViewModel

<!-- Modal Header -->
<div class="modal-header bg-primary text-white">
    <h5 class="modal-title">
        <i class="bi bi-clipboard-data me-2"></i> Détails du projet
    </h5>
    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<!-- Modal Body -->
<div class="modal-body">
    <div class="row g-3">

        <!-- الصورة + العنوان -->
        <div class="col-md-4 text-center">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-light fw-bold">
                        <i class="bi bi-image me-1"></i> Image
                    </div>
                    <div class="card-body d-flex align-items-center justify-content-center">
                        <img src="@Model.ImageUrl" alt="Image du projet" class="img-fluid rounded" style="max-height: 200px; width: auto;" />
                    </div>
                </div>
            }
            else
            {
                var letter = !string.IsNullOrEmpty(Model.Title) ? Model.Title.Trim().Substring(0, 1).ToUpper() : "?";
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-light fw-bold">
                        <i class="bi bi-card-image me-1"></i> Logo
                    </div>
                    <div class="card-body d-flex align-items-center justify-content-center">
                        <div class="bg-dark text-white d-flex align-items-center justify-content-center rounded-circle"
                             style="width: 100px; height: 100px; font-size: 36px; font-weight: bold;">
                            @letter
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- البطاقة الأساسية للمشروع -->
        <div class="col-md-8">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-light fw-bold">
                    <i class="bi bi-info-circle me-1"></i> Informations du projet
                </div>
                <div class="card-body">
                    <h5 class="mb-4">@Model.Title</h5>

                    <div class="row g-2">
                        <div class="col-6">
                            <p class="mb-1"><strong><i class="bi bi-person me-1"></i> Chef de projet:</strong><br />@Model.LeaderFullName</p>
                            <p class="mb-1"><strong><i class="bi bi-globe me-1"></i> Domaine:</strong><br />@Model.Domain</p>
                            <p class="mb-1"><strong><i class="bi bi-arrow-right-circle me-1"></i> Axe:</strong><br />@Model.Axis</p>
                            <p class="mb-1"><strong><i class="bi bi-tag me-1"></i> Thème:</strong><br />@Model.Theme</p>
                        </div>
                        <div class="col-6">
                            <p class="mb-1"><strong><i class="bi bi-tree me-1"></i> Nature:</strong><br />@Model.Nature</p>
                            <p class="mb-1"><strong><i class="bi bi-book me-1"></i> PNR:</strong><br />@Model.PNR</p>
                            <p class="mb-1"><strong><i class="bi bi-bar-chart me-1"></i> TRL:</strong><br />@Model.TRL</p>
                            <p class="mb-1"><strong><i class="bi bi-calendar me-1"></i> Date de création:</strong><br />@Model.CreationDate.ToString("dd/MM/yyyy")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<!-- Modal Footer -->
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
        <i class="bi bi-x-circle me-1"></i> Fermer
    </button>
</div>