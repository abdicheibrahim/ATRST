@using ProjetAtrst.ViewModels.Project;
@model List<ProjectListViewModel>
@{
    Layout = "_LayoutResearcher";
}


<div class="mb-4">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-2">
        <h2 class="mb-0">Mes projets</h2>
        <div class="d-flex flex-column flex-sm-row gap-2">
            <a class="btn btn-outline-success" asp-controller="Project" asp-action="AvailableProjects">
                <i class="bi bi-person-plus"></i> Rejoindre un projet
            </a>
            @if (!ViewBag.CanCreateProject)
            {
                <button type="button" class="btn btn-secondary" data-bs-toggle="tooltip" data-bs-placement="top"
                        data-bs-title="Désolé, vous ne pouvez pas créer de nouveau projet. Cette fonctionnalité est réservée aux chercheurs n'ayant pas dépassé le nombre maximal de projets.">
                    Créer un projet
                </button>
            }
            else
            {
                <a class="btn btn-outline-success" asp-controller="Project" asp-action="Create">
                    <i class="bi bi-plus-circle"></i> Créer un projet
                </a>
            }
            
        </div>
    </div>
</div>








<div class="table-responsive">
    <table class="table table-bordered table-striped align-middle">
        <thead class="table-light">
            <tr>
                <th>Image</th> 
                <th>Titre</th>
                <th>Date de création</th>
                <th>Statut</th>
                <th>Statut</th>
                <th>Dernière activité</th>
                <th>Rôle</th>
                <th>Détails</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var project in Model)
            {
                
              
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(project.LogoPath))
                        {
                            <img src="@project.LogoPath"
                                 alt="Logo"
                                 style="height: 50px; width: 50px; object-fit: cover; border-radius: 6px;" />
                        }
                        else
                        {
                            <div style="height: 50px; width: 50px; background-color: #000000; color: white;
                            display: flex; align-items: center; justify-content: center;
                            border-radius: 6px; font-weight: bold; font-size: 20px;">
                                @(project.Title?.Trim().FirstOrDefault().ToString().ToUpper())
                            </div>
                        }
                    </td>
                    <td>@project.Title</td>
                    <td>@project.CreationDate.ToShortDateString()</td>
                    <td>
                        @if (project.IsAcceptingJoinRequests)
                        {

                            <span class="badge text-bg-secondary">Public</span>
                        }
                        else
                        {
                            <span class="badge text-bg-success">Privé</span>
                        }
                    <td>@project.IsAcceptingJoinRequests</td>
                    <td>@project.LastActivity.ToShortDateString()</td>
                    <td>
                        @if (project.Role == Role.Leader)
                        {
                            <span class="badge bg-success">Chef</span>
                        }
                        else
                        {
                            <span class="badge bg-primary">Membre</span>
                        }
                    </td>
                    <td>
                        @if (project.Role == Role.Leader)
                        {
                            <a class="btn btn-sm btn-outline-primary"
                               asp-controller="ProjectContext"
                               asp-action="Enter"
                               asp-route-projectId="@project.Id">
                                Entrer
                            </a>
                        }
                        else
                        {
                            <a class="btn btn-sm btn-outline-success"
                               asp-controller="Project"
                               asp-action="Details"
                               asp-route-id="@project.Id">
                                Détails
                            </a>
                        }
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>
@section Scripts {
    <script>
        // Initialize Bootstrap tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        })

    </script>
}