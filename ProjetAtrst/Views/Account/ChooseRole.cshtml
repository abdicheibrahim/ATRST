@{
    ViewData["Title"] = "Choose Your Role";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h2 class="fw-bold">Choose How You Want to Participate</h2>
        <p class="text-muted">You need to either join an existing project or create a new one.</p>
    </div>

    <div class="row justify-content-center g-4">
        <!-- Join a Project -->
        <div class="col-md-5">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <i class="fa-solid fa-users fa-3x text-primary mb-3"></i>
                    <h5 class="card-title fw-bold">Join an Existing Project</h5>
                    <p class="card-text text-muted">Browse existing research projects and send a request to join a team.</p>
                    <form asp-action="JoinProject" method="post">
                        <button type="submit" class="btn btn-outline-primary mt-3">Join a Project</button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Create a Project -->
        <div class="col-md-5">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <i class="fa-solid fa-lightbulb fa-3x text-success mb-3"></i>
                    <h5 class="card-title fw-bold">Create a New Project</h5>
                    <p class="card-text text-muted">Start your own research project and invite others to join your team.</p>
                    <form asp-action="BecomeLeader" method="post">
                        <button type="submit" class="btn btn-success mt-3">Create Project</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
