@model PaginationModel
@if (Model.TotalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                <a href="#" class="page-link pagination-link" data-page="@(Model.CurrentPage - 1)">السابق</a>
            </li>

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                    <a href="#" class="page-link pagination-link @(Model.CurrentPage == i ? "bg-success text-white border-success " : "")"
                       data-page="@i">@i</a>
                </li>
            }

            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                <a href="#" class="page-link pagination-link" data-page="@(Model.CurrentPage + 1)">التالي</a>
            </li>
        </ul>
    </nav>
}