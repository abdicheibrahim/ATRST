@{
    Layout = null;
    // var projectId = ViewBag.CurrentProjectId ?? 0;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>ATRST @ViewData["title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@@yaireo/tagify/dist/tagify.css" />
    <link href="~/css/site.css" rel="stylesheet" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- Spinner Overlay -->
    <div id="globalSpinner" class="hidden">
        <div class="spinner-container">
            <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
                <span class="visually-hidden">Chargement...</span>
            </div>
            <p class="mt-2" style="color: #333;">Chargement...</p>
        </div>
    </div>

    <!-- Top bar -->
    <div class="topbar d-flex align-items-center justify-content-between px-3 py-2 shadow-sm bg-white border-bottom">
        <!-- Sidebar toggle (Mobile only) -->
        <button type="button" class="btn btn-light d-md-none" id="toggleSidebar" title="Menu">
            <i class="bi bi-list fs-4"></i>
        </button>

        <!-- Project Back Button -->
        <a class="btn btn-primary" asp-controller="Dashboard" asp-action="Index" role="button">
            <i class="bi bi-arrow-left-circle me-2"></i>Retour
        </a>

        <!-- Composant ViewComponent pour afficher l'utilisateur et les notifications -->
        @await Component.InvokeAsync("ProjectInfo")
    </div>

    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <div class="sidebar-links">
            <a asp-controller="ProjectContext" asp-action="Index"
               class="nav-link @(IsActive("ProjectContext","Index"))">
                <i class="bi bi-house-door"></i> Accueil
            </a>
            <hr />
            <a asp-controller="ProjectContext" asp-action="Invitation" 
               class="nav-link @(IsActive("ProjectContext","Invitation"))">
                <i class="bi bi-send-arrow-down"></i> Invitations à rejoindre
            </a>
            <a asp-controller="ProjectContext" asp-action="Requests" 
               class="nav-link @(IsActive("ProjectContext","Requests"))">
                <i class="bi bi-envelope-arrow-down"></i> Demandes d'adhésion
            </a>
            <a asp-controller="ProjectContext" asp-action="Members" 
               class="nav-link @(IsActive("ProjectContext","Members"))">
                <i class="bi bi-people"></i> Membres
            </a>
            <hr />
            <a asp-controller="ProjectContext" asp-action="Edit" 
               class="nav-link @(IsActive("ProjectContext","Edit"))">
                <i class="bi bi-pencil-square"></i> Modifier le projet
            </a>
            <hr />
        </div>

        <!-- Logout link fixed at the bottom -->
        <a asp-controller="Account" asp-action="Logout" class="nav-link logout-link @(IsActive("Account","Logout"))">
            <i class="bi bi-box-arrow-right"></i> Déconnexion
        </a>
    </div>

    <!-- Overlay layer when menu is open -->
    <div class="overlay" id="overlay"></div>

    <div class="content">
        @* <div class="alert alert-success text-center alert-dismissible fade show" role="alert"> *@
        @*     Bienvenue dans votre projet. Vous pouvez revenir en cliquant sur le bouton de retour. *@
        @*     <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button> *@
        @* </div> *@
        @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@yaireo/tagify"></script>
    <script src="~/js/site.js"></script>

    @functions {
        private string IsActive(string controller, string action)
        {
            var currentController = Context.Request.RouteValues["controller"]?.ToString();
            var currentAction = Context.Request.RouteValues["action"]?.ToString();
            return (currentController == controller && currentAction == action) ? "active" : "";
        }
    }

    @RenderSection("Scripts", required: false)
</body>
</html>
