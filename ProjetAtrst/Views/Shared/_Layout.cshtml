<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>ATRST  @ViewData["title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@@yaireo/tagify/dist/tagify.css" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>

    <!--  Top bar -->
    <div class="topbar">
        <button type="button" title="Menu" class="btn btn-light d-md-none" id="toggleSidebar"><i class="bi bi-list"></i></button>
        <a class="link-offset-2 link-underline link-underline-opacity-0 text-secondary-emphasis" asp-controller="home" asp-action="Index">
            <div class="logo-container">
                <img src="~/images/logo-mini.png" alt="ATRST Logo" class="logo" />
                <span class="project-title">ATRST Project</span>
            </div>
        </a>

        <!--  Account button with dropdown -->
        <div class="user-dropdown ">
            <button type="button" title="user dropdown" class="user-btn" id="userBtn">
                <img src="~/images/user-image.jpg" alt="User Profile" class="user-img">
            </button>
            <div class="user-menu">
                <a asp-controller="User" asp-action="EditProfile"><i class="fa-solid fa-user"></i> Profile</a>
                <a asp-controller="User" asp-action="Login"><i class="fa-solid fa-right-from-bracket"></i> Sign out</a>
            </div>
        </div>
    </div>

    <!--  Sidebar -->
    <div class="sidebar" id="sidebar">
        <h6>Profile</h6>
        <a asp-controller="User" asp-action="EditProfile" class="@(Context.Request.RouteValues["action"]?.ToString() == "EditProfile" ? "active" : "") nav-link"><i class="fa-solid fa-user"></i> Profile</a>
        <a asp-controller="User" asp-action="Education" class="@(Context.Request.RouteValues["action"]?.ToString() == "Education" ? "active" : "") nav-link"><i class="fa-solid fa-graduation-cap"></i> Education</a>
        <a asp-controller="User" asp-action="Employments" class="@(Context.Request.RouteValues["action"]?.ToString() == "Employments" ? "active" : "") nav-link"><i class="fa-solid fa-address-card"></i> Employments</a>

        <hr>
        <h6>Team</h6>
        <a asp-controller="Team" asp-action="Details" class="@(Context.Request.RouteValues["action"]?.ToString() == "Details" ? "active" : "") nav-link"><i class="fa-solid fa-gear"></i> Team Details</a>
        <a asp-controller="Team" asp-action="Users" class="@(Context.Request.RouteValues["action"]?.ToString() == "Users" ? "active" : "") nav-link"><i class="fa-solid fa-people-group"></i> Members</a>
        <a asp-controller="Team" asp-action="JoinRequests" class="@(Context.Request.RouteValues["action"]?.ToString() == "JoinRequests" ? "active" : "") nav-link"><i class="fa-solid fa-user-plus"></i> Join Requests <span class="badge bg-warning text-dark ms-4"> +2</span></a>
        <hr>
        <h6>Project</h6>
        <a asp-controller="Project" asp-action="EditProject" class="@(Context.Request.RouteValues["action"]?.ToString() == "EditProject" ? "active" : "") nav-link"><i class="fa-solid fa-diagram-project"></i> Project</a>
        <a asp-controller="Project" asp-action="Documents" class="@(Context.Request.RouteValues["action"]?.ToString() == "Documents" ? "active" : "") nav-link"><i class="fa-solid fa-file-lines"></i> Documents</a>
        <a asp-controller="Project" asp-action="Partners" class="@(Context.Request.RouteValues["action"]?.ToString() == "Partners" ? "active" : "") nav-link"><i class="fa-solid fa-handshake"></i> Partners</a>
        <a asp-controller="Project" asp-action="WorkPackages" class="@(Context.Request.RouteValues["action"]?.ToString() == "WorkPackages" ? "active" : "") nav-link"><i class="fa-solid fa-briefcase"></i> Work Packages</a>
        <a asp-controller="Project" asp-action="Deliverables" class="@(Context.Request.RouteValues["action"]?.ToString() == "Deliverables" ? "active" : "") nav-link"><i class="fa-solid fa-file-signature "></i> Deliverables</a>
    </div>

    <!--  Overlay layer when menu is open -->
    <div class="overlay" id="overlay"></div>

    @RenderBody()

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@yaireo/tagify"></script>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
