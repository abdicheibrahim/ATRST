        @* <a asp-controller="Team" asp-action="Details" class="nav-link @(IsActive("Details"))"><i class="fa-solid fa-gear"></i> Team Details</a> *@
        @* <a asp-controller="Team" asp-action="Users" class="nav-link @(IsActive("Users"))"><i class="fa-solid fa-people-group"></i> Members</a> *@
        @* <a asp-controller="Team" asp-action="JoinRequests" class="nav-link @(IsActive("JoinRequests"))"> *@
        @*     <i class="fa-solid fa-user-plus"></i> Join Requests <span class="badge bg-warning text-dark ms-4">+2</span> *@
        @* </a> *@

        @* <hr /> *@
         <h6>Projet</h6>
        <a asp-controller="Project" asp-action="Create" class="nav-link @(IsActive("Create"))"><i class="fa-solid fa-diagram-project"></i> Créer un nouveau projet</a>
        <a asp-controller="Project" asp-action="MyProjects" class="nav-link @(IsActive("MyProjects"))"><i class="fa-solid fa-file-lines"></i> Mes projets</a>
oller="Project" asp-action="MyProjects" class="nav-link @(IsActive("MyProjects"))"><i class="fa-solid fa-file-lines"></i> MyProject</a>
        @* <a asp-controller="Project" asp-action="Partners" class="nav-link @(IsActive("Partners"))"><i class="fa-solid fa-handshake"></i> Partners</a> *@
        @* <a asp-controller="Project" asp-action="WorkPackages" class="nav-link @(IsActive("WorkPackages"))"><i class="fa-solid fa-briefcase"></i> Work Packages</a> *@
        @* <a asp-controller="Project" asp-action="Deliverables" class="nav-link @(IsActive("Deliverables"))"><i class="fa-solid fa-file-signature"></i> Deliverables</a> *@
           @* @await Component.InvokeAsync("Sidebar")    *@
   </div> 

    <!--  Overlay layer when menu is open -->
    <div class="overlay" id="overlay"></div>
    <div class="content ">
          @* @await Component.InvokeAsync("ApprovalStatus")   *@
        @RenderBody()  
   </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@yaireo/tagify"></script>
    <script src="~/js/site.js"></script>
     @functions { 
         private string IsActive(string action) 
         { 
            var currentAction = Context.Request.RouteValues["action"]?.ToString(); 
            return currentAction == action ? "active" : ""; 
         } 
    }
    @RenderSection("Scripts", required: false)

</body>
</html>
