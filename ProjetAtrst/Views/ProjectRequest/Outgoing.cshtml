@model IEnumerable<ProjectRequest>
@{
    ViewData["Title"] = "Demandes envoy√©es";
}

<h3 class="mb-4">üì§ Demandes envoy√©es</h3>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            @* <th>√Ä</th> *@
            @* <th>Type de demande</th> *@
            @* <th>Projet</th> *@
            @* <th>Message</th> *@
            @* <th>Statut</th> *@
            @* <th>Actions</th> *@

            <th class=" fw-semibold">
                <i class="bi bi-person-circle me-2 text-primary"></i>Destinataire
            </th>
            <th class=" fw-semibold">
                <i class="bi bi-tag me-2 text-info"></i>Type de demande
            </th>
            <th class=" fw-semibold">
                <i class="bi bi-folder me-2 text-warning"></i>Projet
            </th>
            <th class=" fw-semibold">
                <i class="bi bi-chat-dots me-2 text-success"></i>Message
            </th>
            <th class=" fw-semibold text-center">Statut</th>
            <th class=" fw-semibold text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var req in Model)
        {
            <tr>
                <td>@req.Receiver?.User.FullName</td>
                <td>@req.Type.ToString()</td>
                <td>@req.Project?.Title</td>
                <td>@req.Message</td>
                <td>
                    @switch (req.Status)
                    {
                        case RequestStatus.Pending:
                            <span class="badge bg-warning text-dark">En attente</span>
                            break;
                        case RequestStatus.Accepted:
                            <span class="badge bg-success">Accept√©</span>
                            break;
                        case RequestStatus.Rejected:
                            <span class="badge bg-danger">Rejet√©</span>
                            break;
                        default:
                            @req.Status.ToString()
                            break;
                    }
                </td>
                <td>
                    @* <a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@req.Id"> *@
                    @*     <i class="bi bi-eye"></i> D√©tails *@
                    @* </a> *@
                    <a asp-controller="ProjectRequest"
                       asp-action="Details"
                       asp-route-id="@req.Id"
                       class="btn btn-outline-primary btn-sm"
                       data-bs-toggle="tooltip"
                       title="Voir les d√©tails">
                        <i class="bi bi-eye"></i>
                    </a>
                    @if (req.Status == RequestStatus.Pending)
                    {
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@req.Id">
                            <i class="bi bi-trash"></i> Supprimer
                        </a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
