@using ProjetAtrst.ViewModels.ProjectRequests
@model RequestsDashboardViewModel

@{
    ViewData["Title"] = "Demande d'adhésion";
}

<h3 class="mb-4">Demande d'adhésion</h3>
<table class="table table-bordered table-striped">
    <thead>
        <tr>


            <th class=" fw-semibold">
                <i class="bi bi-person-circle me-2 text-primary"></i>Destinataire
            </th>
            <th class=" fw-semibold">
                <i class="bi bi-tag me-2 text-info"></i>Type de demande
            </th>
            <th class=" fw-semibold">
                <i class="bi bi-folder me-2 text-warning"></i>Projet
            </th>
            <th class=" fw-semibold">
                <i class="bi bi-chat-dots me-2 text-success"></i>Message
            </th>
            <th class=" fw-semibold text-center">Statut</th>
            <th class=" fw-semibold text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var req in Model.IncomingRequests)
        {
            <tr>
                <td>@req.Receiver?.User.FullName</td>
                <td>@req.Type.ToString()</td>
                <td>@req.Project?.Title</td>
                <td>@req.Message</td>
                <td>
                    @switch (req.Status)
                    {
                        case RequestStatus.Pending:
                            <span class="badge bg-warning text-dark">En attente</span>
                            break;
                        case RequestStatus.Accepted:
                            <span class="badge bg-success">Accepté</span>
                            break;
                        case RequestStatus.Rejected:
                            <span class="badge bg-danger">Rejeté</span>
                            break;
                        default:
                            @req.Status.ToString()
                            break;
                    }
                </td>
                <td class="text-center">
                    <div class="btn-group" role="group">
                        <a asp-controller="ProjectRequest"
                           asp-action="Details"
                           asp-route-id="@req.Id"
                           class="btn btn-outline-primary btn-sm"
                           data-bs-toggle="tooltip"
                           title="Voir les détails">
                            <i class="bi bi-eye"></i>
                        </a>

                        @if (req.Status == RequestStatus.Pending)
                        {
                            <form asp-controller="ProjectRequest" asp-action="Accept" asp-route-id="@req.Id" method="post" class="d-inline">
                                <button type="submit"
                                        class="btn btn-outline-success btn-sm"
                                        data-bs-toggle="tooltip"
                                        title="Accepter la demande">
                                    <i class="bi bi-check-lg"></i>
                                </button>
                            </form>
                            <form asp-controller="ProjectRequest" asp-action="Reject" asp-route-id="@req.Id" method="post" class="d-inline">
                                <button type="submit"
                                        class="btn btn-outline-danger btn-sm"
                                        data-bs-toggle="tooltip"
                                        title="Rejeter la demande">
                                    <i class="bi bi-x-lg"></i>
                                </button>
                            </form>
                        }
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>