@model ProjetAtrst.Models.ProjectRequest
@{
    ViewData["Title"] = "Détails de la demande";
}

<div class="container mt-5">
    <div class="border-1 p-3 shadow rounded-4">
        <div class=" bg-primary text-white d-flex justify-content-between align-items-center rounded-top-4">
            <h4 class="mb-0">📄 Détails de la demande</h4>
            <span class="badge
                @(Model.Status == RequestStatus.Pending ? "bg-warning text-dark" :
                  Model.Status == RequestStatus.Accepted ? "bg-success" : "bg-danger")">
                @(
                    Model.Status == RequestStatus.Pending ? "En attente" :
                    Model.Status == RequestStatus.Accepted ? "Accepté" :
                    "Refusé"
                    )
            </span>
        </div>

        <div class="border-1 p-3">
            <div class="mb-3">
                <strong>👤 Expéditeur :</strong>
                <div>@(string.IsNullOrWhiteSpace(Model.Sender?.FullName) ? "Inconnu" : Model.Sender.FullName)</div>
            </div>
            <div class="mb-3">
                <strong>🎯 Destinataire :</strong>
                <div>@(string.IsNullOrWhiteSpace(Model.Receiver?.FullName) ? "Inconnu" : Model.Receiver.FullName)</div>
            </div>
            <div class="mb-3">
                <strong>📌 Type de demande :</strong>
                <div>@Model.Type.ToString()</div>
            </div>
            <div class="mb-3">
                <strong>📁 Projet :</strong>
                <div>@(string.IsNullOrWhiteSpace(Model.Project?.Title) ? "Non lié" : Model.Project.Title)</div>
            </div>
            <div class="mb-3">
                <strong>✉️ Message :</strong>
                <div class="border rounded p-3 bg-light text-break" style="white-space: pre-line;">
                    @Model.Message
                </div>
            </div>
            <div class="mb-3">
                <strong>🕒 Date d'envoi :</strong>
                <div>@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</div>
            </div>
        </div>

        <div class="card-footer text-end">
            <a asp-action="Incoming" class="btn btn-outline-secondary">🔙 Retour</a>
        </div>
    </div>
</div>
