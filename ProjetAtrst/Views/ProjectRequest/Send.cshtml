
@using ProjetAtrst.ViewModels.ProjectRequests
@model ProjectRequestCreateViewModel
@{
    ViewData["Title"] = "إرسال طلب أو دعوة";
    bool isJoin = Model.Type == RequestType.Join;
}

<h3 class="mb-4">✉️ envoyer @(isJoin ? "Demande d'adhésion" : "Invitation")</h3>

<div class="alert alert-success">
    <strong>المشروع:</strong> @Model.ProjectTitle <br />
    <strong>@(isJoin ? "Le leader" : "Le chercheur"):</strong> @Model.LeaderFullName
</div>

<form asp-action="Send" method="post">
    <input type="hidden" asp-for="ProjectId" />
    <input type="hidden" asp-for="ReceiverId" />
    <input type="hidden" asp-for="Type" />


    <div class="mb-3">
        <label asp-for="Message" class="form-label">Message ci-joint</label>
        <textarea asp-for="Message" class="form-control Description" id="Description" rows="4"></textarea>
        <span asp-validation-for="Message" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success"> envoyer 📨</button>
</form>

