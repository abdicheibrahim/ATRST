@model ProjetAtrst.ViewModels.Dashboard.DashboardViewModel

@{
    Layout = "_LayoutResearcher";
}

@{
    ViewData["Title"] = "الصفحة الرئيسية";
}

<div class="container mt-4">
    <h2 class="mb-4">📘 المشاريع التي أنا قائد فيها</h2>

    @if (Model.LeaderProjects.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 g-4">
            @foreach (var project in Model.LeaderProjects)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="row g-0">
                            <div class="col-3 d-flex align-items-center justify-content-center bg-light">
                                <img src="@project.ImageUrl ?? \" /images/project-placeholder.png\"" class="img-fluid" alt="صورة المشروع" style="max-height: 64px;">
                            </div>
                            <div class="col-9">
                                <div class="card-body">
                                    <h5 class="card-title">@project.ProjectTitle</h5>
                                    <p class="card-text mb-1">👥 عدد الأعضاء: <strong>@project.MemberCount</strong></p>

                                    @if (project.RelatedNotificationsCount > 0)
                                    {
                                        <p class="card-text text-warning">
                                            🔔 إشعارات: +@project.RelatedNotificationsCount
                                        </p>
                                    }
                                    else
                                    {
                                        <p class="card-text text-muted">لا توجد إشعارات</p>
                                    }

                                    <a href="@Url.Action("Enter", "ProjectContext", new { projectId = project.ProjectId })" class="stretched-link"></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-muted">لا توجد مشاريع تقودها حاليًا.</p>
    }

    <hr class="my-5">

    <h2 class="mb-4">📒 المشاريع التي أنا عضو فيها</h2>

    @if (Model.JoinedProjects.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 g-4">
            @foreach (var project in Model.JoinedProjects)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="row g-0">
                            <div class="col-3 d-flex align-items-center justify-content-center bg-light">
                                <img src="@project.ImageUrl ?? \" /images/project-placeholder.png\"" class="img-fluid" alt="صورة المشروع" style="max-height: 64px;">
                            </div>
                            <div class="col-9">
                                <div class="card-body">
                                    <h5 class="card-title">@project.ProjectTitle</h5>
                                    <p class="card-text">👤 القائد: <strong>@project.LeaderFullName</strong></p>
                                    <a href="@Url.Action("Details", "Projects", new { id = project.ProjectId })" class="stretched-link"></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-muted">لا توجد مشاريع أنت عضو فيها حاليًا.</p>
    }
</div>
