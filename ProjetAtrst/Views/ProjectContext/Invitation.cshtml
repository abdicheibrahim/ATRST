@using ProjetAtrst.ViewModels.ProjectRequests
@model List<ProjectJoinRequestViewModel>
@{
    ViewData["Title"] = "Invitations à rejoindre";
    Layout = "_LayoutProject";
}

<div class="mb-4">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-2">
        <h2 class="mb-0">Invitations à rejoindre</h2>
        <div class="d-flex flex-column flex-sm-row gap-2">
            <a class="btn btn-outline-success"
               asp-action="SendInvitations">
                <i class="bi bi-plus-square"></i> Envoyer des invitations
            </a>
          
           
        </div>
    </div>
</div>
<table class="table table-bordered">
    <thead class="table-light">
        <tr>
            <th><i class="bi bi-person me-1"></i>ٌRécepteur</th>
            <th><i class="bi bi-info-circle me-1"></i>Statut</th>
            <th><i class="bi bi-calendar3 me-1"></i>Date</th>
            <th><i class="bi bi-gear me-1"></i>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var req in Model)
        {
            <tr>
                <td>@req.SenderName</td>
                <td>
                    @switch (req.Status)
                    {
                        case RequestStatus.Pending:
                            <span class="badge bg-warning text-dark">
                                <i class="bi bi-hourglass-split me-1"></i>En attente
                            </span>
                            break;
                        case RequestStatus.Accepted:
                            <span class="badge bg-success">
                                <i class="bi bi-check-circle me-1"></i>Accepté
                            </span>
                            break;
                        case RequestStatus.Rejected:
                            <span class="badge bg-danger">
                                <i class="bi bi-x-circle me-1"></i>Rejeté
                            </span>
                            break;
                    }
                </td>
                <td>@req.SentAt.ToString("yyyy-MM-dd")</td>
                <td>
                    @if (req.Status == RequestStatus.Pending)
                    {
                        <form asp-controller="ProjectContext" asp-action="RejectRequest" asp-route-id="@req.RequestId" method="post" class="d-inline">
                            <button type="submit"
                                    class="btn btn-outline-danger btn-sm"
                                    data-bs-toggle="tooltip"
                                    title="Rejeter la demande">
                                <i class="bi bi-x-lg"></i>
                            </button>
                        </form>
                    }
                    else
                    {
                        <span class="text-muted">Aucune action requise</span>
                    }
                </td>

            </tr>
        }
    </tbody>
</table>

