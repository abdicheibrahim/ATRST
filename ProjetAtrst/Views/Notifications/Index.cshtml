@model List<Notification>
@{
    Layout = "_LayoutResearcher";
}
<h3>Notifications</h3>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Titre</th>
            <th>Message</th>
            <th>Date</th>
            <th>État</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var n in Model)
        {
            <tr>
                <td>@n.Title</td>
                <td>@n.Message</td>
                <td>@n.CreatedAt.ToString("yyyy-MM-dd")</td>
                <td>
                    @if (n.IsRead)
                    {
                        <span class="text-success">Lu</span>
                    }
                    else
                    {
                        <span class="text-danger">Nouveau</span>
                    }
                </td>
                <td>
                    @if (!n.IsRead)
                    {
                        <form asp-action="MarkAsRead" method="post">
                            <input type="hidden" name="id" value="@n.Id" />
                            <button type="submit" class="btn btn-sm btn-primary">Marquer comme lu</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
